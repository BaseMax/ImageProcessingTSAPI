{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop" : true ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true ,
    "useDefineForClassFields": false , 
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
  } ,
  "exclude": [
    "node_modules"
  ] ,
  "include": [
    "./src/**/*.ts"
  ]
}